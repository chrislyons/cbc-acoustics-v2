{
  "name": "cbc-acoustics-v2",
  "version": "2.0.0",
  "description": "Modern rebuild of CBC Studio 8 acoustics visualization dashboard",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "typecheck": "tsc --noEmit",
    "gemini": "gemini --sandbox",
    "codex": "codex --sandbox workspace-write",
    "codex-unsafe": "codex",
    "firebase": "firebase",
    "firebase:init": "firebase init",
    "firebase:deploy": "firebase deploy",
    "firebase:serve": "firebase serve"
  },
  "keywords": [
    "acoustics",
    "visualization",
    "dashboard",
    "cbc"
  ],
  "author": "Chris Lyons",
  "license": "UNLICENSED",
  "dependencies": {
    "@react-three/drei": "^9.122.0",
    "@react-three/fiber": "^8.18.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.553.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.5",
    "recharts": "^3.3.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.17",
    "three": "^0.181.0"
  },
  "devDependencies": {
    "@google/gemini-cli": "^0.15.3",
    "@openai/codex": "^0.58.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.15.0",
    "firebase-tools": "^14.25.0",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2",
    "vite": "^6.0.1",
    "vitest": "^2.1.8"
  }
}
